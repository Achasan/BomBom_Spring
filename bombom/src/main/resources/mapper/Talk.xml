<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.bombom.model.TalkDAO">

	<select id="getPosts" resultType="com.bombom.model.TalkDTO">
		select * from bombom_talk order by talk_date desc
	</select>

	<select id="getPost" parameterType="int" resultType="com.bombom.model.TalkDTO">
		select * from bombom_talk where talk_no = #{talk_no}
	</select>

	<insert id="insertPost" parameterType="com.bombom.model.TalkDTO">
		insert into bombom_talk values(talk_seq.nextval, #{user_id}, #{user_nickname}, #{talk_title}, #{talk_cont}, 0, 0, 0, SYSDATE)
	</insert>
</mapper>