<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.bombom.model.PremiereDAO">

	<!-- 시사회 게시판 글 작성-->
	<insert id="add" parameterType="com.bombom.model.PremiereDTO">
		<selectKey resultType="int" keyProperty="board_no" order="BEFORE">
			select max(premiere_no)+1 from board
		</selectKey>
		insert into board values(
			#{premiere_no}, 
			#{premiere_thumbnail}, 
			#{premiere_title}, 
			#{premiere_cont},
			sysdate, '1')	
	</insert>
</mapper>